<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="Author Homepage" content="Author homepage for microbloggers" />
    <meta name="author" content="Author" />
    <meta name="robots" content="index, follow" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/styles.css" />
    <title>Microblogger</title>
  </head>
  <body>
    <!-- masthead code -->
    <div id="masthead" class="masthead-container">
      <div id="start">
        <div id="tag">
          <h3>Microblogger:</h3>
        </div>
        <div id="page type">
          <p>Author Homepage</p>
        </div>
      </div>
      <div id="end">
        <a href="/author/home">back</a>
      </div>
    </div>
    <!-- End of masthead code -->

    <!-- banner code -->
    <div id="banner" class="banner-container">
      <div id="bannerHeader">
        <p><%= bannerSettingsData.banner_header %></p>
      </div>
      <div id="bannerSubheader">
        <p><%= bannerSettingsData.banner_subheader %></p>
      </div>
      <div id="authorName">
        <p><%= bannerSettingsData.author_name %></p>
      </div>
    </div>
    <!-- End of banner code -->

    <!-- New article container -->
    <div id="newArticle" class="newArticle-container">
      <form
        action="/author/create-new-draft"
        method="post"
        id="newArticleForm"
      >
        <div id="newArticleTitle">
          <label for="newArticleTitle">Title:</label>
          <input
            type="text"
            id="newArticleTitle"
            name="title"
            placeholder="Please write your title here."
          />
        </div>
        <div id="newArticleSubtitle">
          <label for="newArticleSubtitle">Subtitle:</label>
          <input
            type="text"
            id="newArticleSubtitle"
            name="subtitle"
            placeholder="Please write your subtitle here."
          />
        </div>
        <div id="newArticleBody">
          <label for="newArticleBody">Body:</label>
          <textarea id="newArticleBody" placeholder="Please write your article here." name="body" ></textarea>
        </div>
        <button type="submit" id="createNewDraftButton">Create a new draft</button>
      </form>
    </div>
    <!-- End of new article container -->
    

  </body>
</html>
